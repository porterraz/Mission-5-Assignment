@{
    ViewData["Title"] = "Rate Calculator";
}

<h2 class="mb-4 text-info">Prompt Engineering Services</h2>
<div class="card p-4 shadow-lg bg-dark border-info" style="max-width: 500px;">
    <form>
        <div class="mb-3">
            <label class="form-label">Consulting Hours Needed:</label>
            <input type="number" class="form-control" id="hours" min="1" placeholder="e.g. 10">
        </div>
        <div class="mb-3">
            <label class="form-label">Hourly Rate (Specialist Tier):</label>
            <input type="text" class="form-control" id="rate" value="$150.00" readonly>
        </div>
        <button type="button" id="btnCalculate" class="btn btn-info w-100 mb-3">Initialize Estimate</button>
        <div class="mb-3">
            <label class="form-label">Total Investment:</label>
            <input type="text" class="form-control fw-bold" id="total" readonly placeholder="$0.00">
        </div>
    </form>
    <div class="mt-3 text-center">
        <a asp-controller="Home" asp-action="Index" class="text-info">Return to Neural Mainframe</a>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/calculator.js"></script>
}